<Window x:Class="PolyclinicApplication.Views.Windows.AuthorizationWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyclinicApplication.Views.Windows"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="500" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Вход" FontWeight="Bold"
               HorizontalAlignment="Center"
               FontSize="30" Margin="20"/>
        <TextBox HorizontalAlignment="Center"
                 Width="250" Height="25" Margin="10"/>
        <TextBox HorizontalAlignment="Center"
                 Width="250" Height="25" Margin="10"/>
        <StackPanel Orientation="Horizontal">
            <Button Margin="70 20 0 0" HorizontalAlignment="Center"
                    Width="150" Height="40" Content="Войти"/>
            <Button Margin="70 20 0 0" HorizontalAlignment="Center"
                    Width="150" Height="40" Content="Регистрация" 
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </StackPanel>
</Window>
